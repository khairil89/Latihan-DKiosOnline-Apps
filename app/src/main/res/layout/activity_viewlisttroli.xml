    <TextView
        android:id="@+id/labelListBarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="List Troli" />

    <ListView
