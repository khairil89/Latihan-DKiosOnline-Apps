<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailgambar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/blue_burger" />

    <LinearLayout
        android:id="@+id/layoutnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailgambar"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/labelNama"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Nama Produk"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="50dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text=": " />

        <TextView
            android:id="@+id/detailNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Hamburger Biru " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutkategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutnama"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/labelKategori"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Kategori"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="50dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text=": " />

        <TextView
            android:id="@+id/detailKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Burger dan Hotdog" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutdeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutkategori"
        android:layout_marginBottom="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center">

        <TextView
            android:id="@+id/labelDeskripsi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Deskripsi"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="50dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text=": " />

        <TextView
            android:id="@+id/detailDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Rasakan sensasi warna biru dari hamburger terbaik kami yang bergizi untuk anak anda" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutharga"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAlignment="center">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="15dp"
            android:text="Rp"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="125000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Kembali"
        android:background="#AD7912"
        android:textColor="#FAFBFE"
        android:onClick="backtoListBarang"/>

</RelativeLayout>
